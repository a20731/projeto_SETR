/* USER CODE BEGIN Header_StartTask_led_3 */
/**
* @brief Function implementing the myTask_led_3 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_led_3 */
void StartTask_led_3(void const * argument)
{
  /* USER CODE BEGIN StartTask_led_3 */

  // Envia mensagem inicial
  myPrintf(PERIPHERAL_USART, "Inicio Task 3\r\n");

  /* Infinite loop */
  for(;;)
  {
      // Envia evento para a queue
      osMessagePut(myQueue01Handle, 0x12, 200);

      // Delay DEVE estar dentro do loop
      osDelay(200);
  }
  /* USER CODE END StartTask_led_3 */
}

/* USER CODE BEGIN Header_StartTask_led_7 */
/**
* @brief Function implementing the myTask_led_7 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_led_7 */
void StartTask_led_7(void const * argument)
{
  /* USER CODE BEGIN StartTask_led_7 */
  /* Infinite loop */
  for(;;)
  {
      // Envia "ola" pela porta serial (UART/COM)
      myPrintf(PERIPHERAL_USART, "Ola via UART\r\n");

      // Pisca LED no pino PA7 (Verifique se tem LED conectado aqui)
      // Nota: O LED verde da Nucleo F411 costuma ser PA5
      HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_7);

      osDelay(500);
  }
  /* USER CODE END StartTask_led_7 */
}

/* USER CODE BEGIN Header_StartTask_led_11 */
/**
* @brief Function implementing the myTask_led_11 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask_led_11 */
void StartTask_led_11(void const * argument)
{
  /* USER CODE BEGIN StartTask_led_11 */
  osEvent evt;

  /* Infinite loop */
  for(;;)
  {
      evt = osMessageGet(myQueue01Handle, 4000); // Espera mensagem por 4s

      if (evt.status == osEventMessage)
      {
          uint16_t val = evt.value.p;
          if (val == 0x12)
          {
              // Toggles LED no pino PA5 (LED Verde da Nucleo)
              HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_5);
          }
      }
      osDelay(1); // Delay minimo
  }
  /* USER CODE END StartTask_led_11 */
}

/* Private application code --------------------------------------------------*/
/* USER CODE BEGIN Application */

void myPrintf(uint16_t peripheral, char *format, ...)
{
 	char buffer[64];

 	va_list args;
 	va_start(args, format);
 	vsprintf(buffer, format, args);
 	va_end(args);

 	switch(peripheral)
 	{
 	case PERIPHERAL_USART:
        // Envia pela UART2 (ST-Link VCP)
 	    HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), 100);
 		break;

 	case PERIPHERAL_USB:
        // Envia pelo USB Device CDC
 		CDC_Transmit_FS ((uint8_t *)buffer, strlen(buffer));
 		break;

 	default:
 		break;
 	}
}

